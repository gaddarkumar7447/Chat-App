<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        tools:context=".LogInSignUp.PasswordReset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/fragment"
                android:background="@drawable/bg_back"
                android:layout_height="273dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/fragment"
                android:layout_marginTop="36.7dp"
                android:background="@drawable/blue_boarder_rounded"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/forgetpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:background="@android:color/transparent"
                    android:hint="Enter the registered Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textCursorDrawable="@drawable/corser_color"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="18.7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="17.3dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/passwordrecoverbutton"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="18.5dp"
                android:background="@drawable/blue_filled"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="Click here to recover"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gobacktologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:text="Want to LogIn?"
                android:textAlignment="textEnd"
                android:textColor="#1566e0"
                android:textSize="15.5dp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>
</layout>